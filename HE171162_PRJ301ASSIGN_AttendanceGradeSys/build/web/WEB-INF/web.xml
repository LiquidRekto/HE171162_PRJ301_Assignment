<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controllers.authentication.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controllers.authentication.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>wkschedule</servlet-name>
        <servlet-class>controllers.WeeklyScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attendcheck</servlet-name>
        <servlet-class>controllers.AttendanceCheckController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>groupattendview</servlet-name>
        <servlet-class>controllers.GroupAttendanceViewerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homescr</servlet-name>
        <servlet-class>controllers.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profileserv</servlet-name>
        <servlet-class>controllers.ProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>assignedgroupsserv</servlet-name>
        <servlet-class>controllers.ViewAssignedGroupsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>todaycheckserv</servlet-name>
        <servlet-class>controllers.TodayCheckController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>wkschedule</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attendcheck</servlet-name>
        <url-pattern>/attendancecheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>groupattendview</servlet-name>
        <url-pattern>/groupview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profileserv</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homescr</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>assignedgroupsserv</servlet-name>
        <url-pattern>/assignedgroups</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>todaycheckserv</servlet-name>
        <url-pattern>/todaycheck</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
